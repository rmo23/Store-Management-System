<h1>Wishlists</h1>
<% if @wishlists.present?%>
<table class = "table table-hover">
  <thead>
    <tr>
      <th>Unit</th>
       <th>Cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishlists.each do |wishlist| %>
      <tr>
        <td><%= Item.where(:id => wishlist.wishlistItem).select("name").last.name %></td>
        <td><%= Item.where(:id => wishlist.wishlistItem).select("price").last.price %></td>  
        <td><%= button_to 'X', wishlist, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else%>
  <h3>The list is empty.</h3></h3>
<% end %>

<%= link_to 'Back', items_path , :class => "btn btn-primary"%>