<%= form_with(model: adminpage, local: true) do |form| %>
  <% if adminpage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(adminpage.errors.count, "error") %> prohibited this adminpage from being saved:</h2>

      <ul>
        <% adminpage.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email,:readonly => true %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.text_field :password,:readonly => true %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.number_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :date_of_birth %>
    <%= form.text_field :date_of_birth %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :credit_card_number %>
    <%= form.number_field :credit_card_number,max: 9999999999999999, min:1000000000000000%>
  </div>

  <div class="field">
    <%= form.label :name_on_card %>
    <%= form.text_field :name_on_card %>
  </div>

  <div class="field">
    <%= form.label :expiration_date %>
    <%= form.text_field :expiration_date %>
  </div>

  <div class="field">
    <%= form.label :CVV %>
    <%= form.number_field :CVV, {min: 100, max: 999, size: "3"} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
